{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "C:\\TDM-GCC-64\\bin\\g++",
            "args": [
                "-g",
                "${workspaceFolder}\\${fileBasename}",
                "-I",
                "C:\\TDM-GCC-64\\include",
                "-o",
                "${workspaceFolder}\\${fileBasenameNoExtension}.exe",
                "-ggdb3",
                "-Wall",
                "-static-libgcc",
                "-std=c++11",
                "-Wno-format",
                "-fexec-charset=GBK",
                "-finput-charset=GBK"
            ],
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cpp.exe 生成活动文件",
            "command": "C:\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ]
}